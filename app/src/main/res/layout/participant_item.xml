<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_border"
    android:padding="@dimen/linear_layout_padding">

    <FrameLayout
        android:id="@+id/frame_layout_search_participant_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_search_participant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:layout_gravity="center_vertical"
            android:text="@string/default_check_participant_item_name"/>


        <ImageView
            android:id="@+id/options_icon_search_participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:layout_gravity="end"
            android:src="@drawable/ic_more_vert_black_24dp"

            android:contentDescription="@string/action_options"/>


    </FrameLayout>

</LinearLayout>