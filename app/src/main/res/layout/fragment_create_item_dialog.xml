<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_padding">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dialog_item_name"
            android:text=""
            android:maxLines="1"
            android:inputType="text"
            android:padding="@dimen/dialog_padding"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_item_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_text_item_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_item_cost"
        android:text=""
        android:maxLines="1"
        android:padding="@dimen/dialog_padding"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>